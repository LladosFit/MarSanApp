<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/back_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atrás"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/exit"
            android:contentDescription="Icono de Atrás"/>
    </LinearLayout>

    <TextView
        android:id="@+id/title_formulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulario"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/subtitle_formulario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marsan"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_below="@id/title_formulario"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/subtitle_formulario"
        android:layout_above="@id/btn_enviar_pdf"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Victor Jiménez Sanchez"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="victortwt6@gmail.com"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="699 665 259"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_dni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04232010X"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C/Paseo Galatea 2°\nToledo, Esquivias\n45221"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limpieza del quemador, con cambio de boquilla.\nTiempo de trabajo 1h."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_piezas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartucho de limpieza.\nBoquilla de 0,7"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_enviar_pdf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:text="Enviar PDF"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"/>
</RelativeLayout>